---
const navItems = [
  { href: '#home', text: 'Home' },
  { href: '#news', text: 'Updates' },
  { href: '#tax-guides', text: 'Tax Guidance' },
  { href: '#learn', text: 'Edu' },
];
---

<header class="fixed top-0 left-0 right-0 bg-primary text-white z-50">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="#home" class="text-2xl font-bold">CryptoLegal</a>
      <ul class="flex space-x-6">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href} 
              class="hover:text-accent transition-colors"
            >
              {item.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<div class="h-16"></div> <!-- Spacer for fixed header -->