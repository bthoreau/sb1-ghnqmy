---
import Layout from '../../layouts/Layout.astro';

const resources = [
  {
    category: 'Legal Resources',
    items: [
      {
        title: 'Regulatory Guidelines',
        description: 'Comprehensive guides on cryptocurrency regulations across major jurisdictions.',
        link: '/resources/regulatory-guidelines'
      },
      {
        title: 'Compliance Templates',
        description: 'Ready-to-use templates for crypto compliance documentation.',
        link: '/resources/compliance-templates'
      },
      {
        title: 'Case Studies',
        description: 'Analysis of landmark crypto legal cases and their implications.',
        link: '/resources/case-studies'
      }
    ]
  },
  {
    category: 'Partner Network',
    items: [
      {
        title: 'Law Firms',
        description: 'Network of specialized cryptocurrency law firms.',
        link: '/resources/law-firms'
      },
      {
        title: 'Compliance Services',
        description: 'Vetted compliance service providers for crypto businesses.',
        link: '/resources/compliance-services'
      },
      {
        title: 'Technology Partners',
        description: 'Blockchain analytics and compliance technology providers.',
        link: '/resources/tech-partners'
      }
    ]
  }
];
---

<Layout title="Resources & Partners">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Resources & Partners</h1>
    
    {resources.map(section => (
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-6 text-primary">{section.category}</h2>
        <div class="grid gap-6">
          {section.items.map(item => (
            <a href={item.link} class="block bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
              <p class="text-gray-600">{item.description}</p>
            </a>
          ))}
        </div>
      </div>
    ))}

    <div class="bg-gray-50 rounded-lg p-8 mt-12">
      <h2 class="text-2xl font-bold mb-4">Become a Partner</h2>
      <p class="text-gray-600 mb-6">
        Join our network of legal and technology partners to provide comprehensive solutions
        for the cryptocurrency industry.
      </p>
      <a
        href="/contact"
        class="inline-block bg-primary text-white px-6 py-3 rounded-lg hover:bg-secondary transition-colors"
      >
        Partner With Us
      </a>
    </div>
  </div>
</Layout>