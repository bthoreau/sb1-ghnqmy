---
import Layout from '../../layouts/Layout.astro';

const courses = [
  {
    title: 'Crypto Regulations Basics',
    description: 'Learn the fundamental legal frameworks governing cryptocurrencies.',
    duration: '2 hours',
    level: 'Beginner'
  },
  {
    title: 'DeFi Legal Framework',
    description: 'Understanding legal implications of decentralized finance.',
    duration: '3 hours',
    level: 'Intermediate'
  },
  {
    title: 'NFT Law Masterclass',
    description: 'Comprehensive guide to NFT regulations and legal considerations.',
    duration: '4 hours',
    level: 'Advanced'
  }
];
---

<Layout title="E-Learning Platform">
  <h1 class="text-4xl font-bold mb-8">E-Learning Platform</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {courses.map(course => (
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
          <h2 class="text-xl font-bold mb-2">{course.title}</h2>
          <p class="text-gray-600 mb-4">{course.description}</p>
          <div class="flex justify-between text-sm text-gray-500">
            <span>Duration: {course.duration}</span>
            <span>Level: {course.level}</span>
          </div>
        </div>
        <div class="px-6 py-4 bg-gray-50">
          <a href={`/learn/${course.title.toLowerCase().replace(/\s+/g, '-')}`} 
             class="block w-full text-center py-2 px-4 bg-primary text-white rounded hover:bg-secondary transition-colors">
            Start Learning
          </a>
        </div>
      </div>
    ))}
  </div>
</Layout>